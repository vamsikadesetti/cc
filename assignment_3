#include <stdio.h>

int factorial(int n); 

main() {
    int n;

    printf("Enter a non-negative integer: ");
    scanf("%d", &n);

    if (n < 0) {
        printf("Error: Factorial of negative number does not exist.\n");
        return 1;
    }

    printf("%d! = %d\n", n, factorial(n));

}
int factorial(int n) {
    if (n == 0) {
        return 1;
    } else {
        return n * factorial(n - 1);
    }
}
